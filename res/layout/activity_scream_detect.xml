<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:paddingTop="20dp" android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp" android:layout_height="40dp"
                android:background="@drawable/card_border"
                android:src="@android:drawable/ic_media_previous"
                android:tint="@color/white"
                android:contentDescription="Back"
                android:layout_marginEnd="14dp"/>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Scream Detection"
                    android:textColor="@color/white" android:textSize="24sp" android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Auto-SOS on loud scream"
                    android:textColor="@color/muted" android:textSize="13sp" android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Status badge -->
        <TextView
            android:id="@+id/tvScreamStatus"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="â­• SCREAM DETECTION  OFF"
            android:textSize="14sp" android:textStyle="bold"
            android:textColor="@color/muted"
            android:background="@drawable/badge_green"
            android:paddingStart="14dp" android:paddingEnd="14dp"
            android:paddingTop="7dp" android:paddingBottom="7dp"
            android:layout_marginBottom="20dp"/>

        <!-- Toggle card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardScreamToggle"
            android:layout_width="match_parent" android:layout_height="90dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp"
            app:cardElevation="8dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="horizontal" android:gravity="center_vertical" android:padding="20dp">

                <TextView android:layout_width="60dp" android:layout_height="60dp"
                    android:text="ðŸŽ™ï¸" android:textSize="32sp" android:gravity="center"/>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="14dp">
                    <TextView
                        android:id="@+id/tvToggleLabel"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="TAP TO ENABLE"
                        android:textColor="@color/white" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvToggleSub"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Scream detection is disabled"
                        android:textColor="@color/muted" android:textSize="12sp" android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Live amplitude meter card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/border" app:strokeWidth="1dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="20dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="ðŸ”Š Live Microphone Level"
                    android:textColor="@color/white" android:textSize="15sp" android:textStyle="bold"
                    android:layout_marginBottom="14dp"/>

                <!-- 10-segment bar -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="36dp"
                    android:orientation="horizontal" android:layout_marginBottom="10dp">

                    <TextView android:id="@+id/bar1"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginEnd="3dp"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                    <TextView android:id="@+id/bar2"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginEnd="3dp"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                    <TextView android:id="@+id/bar3"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginEnd="3dp"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                    <TextView android:id="@+id/bar4"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginEnd="3dp"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                    <TextView android:id="@+id/bar5"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginEnd="3dp"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                    <TextView android:id="@+id/bar6"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginEnd="3dp"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                    <TextView android:id="@+id/bar7"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginEnd="3dp"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                    <TextView android:id="@+id/bar8"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginEnd="3dp"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                    <TextView android:id="@+id/bar9"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginEnd="3dp"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                    <TextView android:id="@+id/bar10"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1E1E2E" android:alpha="0.4"/>
                </LinearLayout>

                <!-- Labels under bar -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginBottom="10dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="6" android:text="Normal"
                        android:textColor="#34D399" android:textSize="10sp"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="2" android:text="Loud"
                        android:textColor="#FFBB00" android:textSize="10sp" android:gravity="center"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="2" android:text="SCREAM" android:gravity="end"
                        android:textColor="#FF2D55" android:textSize="10sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAmplitude"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Amplitude: 0 / 32767"
                    android:textColor="@color/muted" android:textSize="11sp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- How it works card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/border" app:strokeWidth="1dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="20dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="â„¹ï¸ How it works"
                    android:textColor="@color/white" android:textSize="15sp" android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvScreamDescription"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="When enabled, SafeHer monitors your microphone 24/7 in the background â€” even when the screen is off.\n\nA sudden loud scream will automatically trigger SOS: alarm + recording + emergency SMS."
                    android:textColor="@color/muted" android:textSize="13sp" android:lineSpacingExtra="4dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sensitivity info card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/border" app:strokeWidth="1dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="20dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="âš™ï¸ Detection Parameters"
                    android:textColor="@color/white" android:textSize="15sp" android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="Amplitude threshold"
                        android:textColor="@color/muted" android:textSize="12sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="18,000 / 32,767" android:textColor="@color/white" android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="Must exceed background by"
                        android:textColor="@color/muted" android:textSize="12sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="2.8Ã—" android:textColor="@color/white" android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="Sustained duration"
                        android:textColor="@color/muted" android:textSize="12sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="300ms" android:textColor="@color/white" android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="Cooldown after trigger"
                        android:textColor="@color/muted" android:textSize="12sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="30 seconds" android:textColor="@color/white" android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
